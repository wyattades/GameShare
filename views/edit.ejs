<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <% for (let c of css) { %>
      <link rel="stylesheet" href="<%= c %>">
    <% } %>
  </head>
  <body>
    <%- include templates/header %>
    <section class="section edit-body ui">
      <div class="columns ui-body">
        <div class="column is-one-quarter sidebar">
          <div class="control">
            <label for="boundary-x">Width of Playable Area</label>
            <input class="input" id="boundary-x" type="number" value="7000" max="10000">
          </div>
          <div class="control">
            <label for="boundary-y">Height of Playable Area</label>
            <input class="input" id="boundary-y" type="number" value="7000" max="10000">
          </div>
          <div class="control">
            <button class="button" id="obj-create">Create</button>
          </div>
          <div class="control">
            <button class="button" id="obj-delete">Delete</button>
          </div>
          <div class="control">
            <button class="button" id="obj-duplicate">Duplicate</button>
          </div>
        </div>
        <div class="column root-column" id="<%= rootId %>"></div>
      </div>
    </section>
    <script src="<%= script %>"></script>
  </body>
</html>
