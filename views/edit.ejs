<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <% for (let c of css) { %>
      <link rel="stylesheet" href="<%= c %>">
    <% } %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <%- include templates/header %>
    <section class="ui">
      <div class="columns ui-body">
        <div class="column is-one-quarter sidebar">
          <div class="panel">
            <p class="panel-heading">Settings</p>
            <p class="panel-tabs">
              <a id="object-tab" class="is-active">Objects</a>
              <a id="grid-tab">Grid</a>
            </p>

            <div class="object-block panel-block">
              <span class="type-name">default</span>
              <input type="color" name="type color" id="type-color" value="#FFAABB" style="margin-left: auto;">
              <div class="field has-addons">
                <div class="control">
                  <button class="button is-small" name="rename type">
                    <i class="fa fa-pencil"></i>
                  </button>
                </div>
                <div class="control">
                  <button class="button is-small" name="delete type">
                    <i class="fa fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
            <div class="object-block panel-block">
              <button class="object-button">
                <div class="color-box"></div>
                x: 450, y: 450, w: 80, h: 100
              </button>
            </div>
            <div class="object-block panel-block">
              <div class="field is-grouped is-centered">
                <div class="control">
                  <button id="new-type-button" class="button is-small">New Type</button>
                </div>
                <div class="control">
                  <button id="new-object-button" class="button is-small">New Object</button>
                </div>
              </div>
            </div>

            <div class="grid-block panel-block">
              <div class="field">
                <label class="label is-small" for="snap-input">Snap</label>
                <div class="control">
                  <input class="input is-small" id="snap-input" type="number" value="10" max="100" name="snap">
                </div>
              </div>
            </div>
            <div class="grid-block panel-block">
              <div class="field">
                <label class="label is-small" for="boundary-x">Width of Playable Area</label>
                <div class="control">
                  <input class="input is-small" id="boundary-x" type="number" value="7000" max="10000" name="boundary-x">
                </div>
              </div>
            </div>
            <div class="grid-block panel-block">
              <div class="field">
                <label class="label is-small" for="boundary-x">Height of Playable Area</label>
                <div class="control">
                  <input class="input is-small" id="boundary-y" type="number" value="7000" max="10000" name="boundary-y">
                </div>
              </div>
            </div>
          </div>
          
          <div class="object-settings panel">
            <p class="panel-heading">Object Settings</p>
            <div class="panel-block">

            </div>
          </div>
        </div>
        <div class="column root-column" id="<%= rootId %>"></div>
      </div>
    </section>
    <script src="<%= script %>"></script>
  </body>
</html>
