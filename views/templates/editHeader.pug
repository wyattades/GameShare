extends ./navbar

block headerContent

  .navbar-start
    .navbar-item.has-dropdown.is-hoverable
      a.navbar-link Menu
      .navbar-dropdown.is-boxed
        a.navbar-item(class=(self.page === 'games') && 'is-active' href="/games")
          span My Games
        a.navbar-item(class=(self.page === 'browse') && 'is-active' href="/play")
          span Browse Games
        hr.navbar-divider
        a.navbar-item(class=(self.page === 'account') && 'is-active' href="/account")
          span Account
    .navbar-item
      input#game-name.input(type="text" placeholder="Game Name" required maxlength=32)
    
  .navbar-end
    .navbar-item
      .field.is-grouped
        .control
          a.button.is-primary.is-outlined.is-inverted#save
            span.icon
              i.fa.fa-save
            span Save

        .control
          a.button.is-success#publish
            span.icon
              i.fa.fa-play
            span Publish