extends ./templates/boilerplate

block page_content

  include ./templates/editHeader

  .layers
    .layer
      .columns.edit-body
        .column.is-one-quarter.sidebar
          .settings-panel.panel
            p.panel-heading Settings
            p.panel-tabs
              a#object-tab.is-active Objects
              a#grid-tab Grid
              a#level-tab Level
            .object-block.panel-block(
              id="new-buttons"
              style="justify-content: center;"
            )
              button.button.is-small#new-type-button New Type
            .grid-block.panel-block
              .field
                label(
                  class="label is-small"
                  for="snap-input"
                ) Grid Spacing
                .control
                  input(
                    class="input is-small"
                    id="snap-input"
                    max="100"
                    name="snap"
                    type="number"
                    value="10"
                  )
            .grid-block.panel-block
              .field
                label(
                  class="label is-small"
                  for="boundary-x"
                ) Width of Playable Area
                .control
                  input(
                    class="input is-small"
                    id="boundary-x"
                    max="10000"
                    name="boundary-x"
                    type="number"
                    value="7000"
                  )
            .grid-block.panel-block
              .field
                label(
                  class="label is-small"
                  for="boundary-y"
                ) Height of Playable Area
                .control
                  input(
                    class="input is-small"
                    id="boundary-y"
                    max="10000"
                    name="boundary-y"
                    type="number"
                    value="7000"
                  )
            .level-block.panel-block
              .field
                label(for="background-color") Level Background Color
                .control
                  input(
                    id="background-color"
                    name="background-color"
                    type="color"
                    value="#000000"
                  )
          #type-settings.panel
            p.panel-heading Type Settings
            .panel-block
              .field
                label(for="background-color") Type Color
                .control
                  input(
                    type="color"
                    name="type-color"
                    id="type-color"
                    value="#FFAABB"
                    style="margin-left: auto;"
                  )
            .panel-block
              .field.is-grouped
                .control
                  button.button(
                    id="type-rename"
                  ) Rename
                .control
                  button.button(
                    id="type-delete"
                  ) Delete
          #object-settings.panel
            p.panel-heading Object Settings
            .panel-block
              .field
                label(for="object-color") Object Color
                .control
                  input(
                    type="color"
                    name="object-color"
                    id="object-color"
                    value="#FFAABB"
                    style="margin-left: auto;"
                  )
            .panel-block
              .field.is-grouped
                .control
                  button.button(
                    id="object-delete"
                  ) Delete
        .column.root-column#root
